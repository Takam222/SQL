/* A list of Celebrities and Their Current Age*/

CREATE TABLE Celebrities (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    fullname TEXT,
    age INTEGER);
    
INSERT into Celebrities (fullname, age) VALUES("Emma Stone", "34");
